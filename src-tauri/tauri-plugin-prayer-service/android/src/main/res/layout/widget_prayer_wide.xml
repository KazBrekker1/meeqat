<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Row 1: Dates and location (narrow) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/hijri_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="15 Rajab 1446"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/gregorian_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wed, Jan 22"
                android:textColor="#80FFFFFF"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/location_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Riyadh, SA"
            android:textColor="#80FFFFFF"
            android:textSize="9sp"
            android:visibility="gone"
            android:layout_marginTop="1dp"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <!-- Row 2: Main content (Next Prayer | Prayer Grid) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- Left Column: Next Prayer -->
        <LinearLayout
            android:id="@+id/next_prayer_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/widget_highlight_bg"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginEnd="4dp">

            <TextView
                android:id="@+id/next_prayer_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next Prayer"
                android:textColor="#A5B4FC"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/next_prayer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fajr"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2h 34m"
                android:textColor="#818CF8"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/next_prayer_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4:58 AM"
                android:textColor="#80FFFFFF"
                android:textSize="10sp"
                android:layout_marginTop="2dp" />

            <!-- Previous prayer (Since) -->
            <LinearLayout
                android:id="@+id/prev_prayer_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/prev_prayer_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Since"
                    android:textColor="#80FFFFFF"
                    android:textSize="9sp" />

                <TextView
                    android:id="@+id/prev_prayer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Isha"
                    android:textColor="#FFFFFF"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:layout_marginStart="3dp" />

                <TextView
                    android:id="@+id/prev_prayer_elapsed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="51m ago"
                    android:textColor="#80FFFFFF"
                    android:textSize="9sp"
                    android:layout_marginStart="3dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Right Column: Prayer Grid (2 cols x 3 rows) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Prayer Row 1: Fajr & Sunrise -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/prayer_row_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="6dp"
                    android:paddingEnd="4dp"
                    android:layout_marginEnd="1dp"
                    android:background="@drawable/widget_prayer_row_bg">

                    <TextView
                        android:id="@+id/prayer_name_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fajr"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/prayer_time_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4:58"
                        android:textColor="#80FFFFFF"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/prayer_row_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="6dp"
                    android:paddingEnd="4dp"
                    android:layout_marginStart="1dp"
                    android:background="@drawable/widget_prayer_row_bg">

                    <TextView
                        android:id="@+id/prayer_name_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sunrise"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/prayer_time_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6:20"
                        android:textColor="#80FFFFFF"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Prayer Row 2: Dhuhr & Asr -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/prayer_row_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="6dp"
                    android:paddingEnd="4dp"
                    android:layout_marginEnd="1dp"
                    android:background="@drawable/widget_prayer_row_bg">

                    <TextView
                        android:id="@+id/prayer_name_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Dhuhr"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/prayer_time_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11:46"
                        android:textColor="#80FFFFFF"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/prayer_row_4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="6dp"
                    android:paddingEnd="4dp"
                    android:layout_marginStart="1dp"
                    android:background="@drawable/widget_prayer_row_bg">

                    <TextView
                        android:id="@+id/prayer_name_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Asr"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/prayer_time_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2:40"
                        android:textColor="#80FFFFFF"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Prayer Row 3: Maghrib & Isha -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/prayer_row_5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="6dp"
                    android:paddingEnd="4dp"
                    android:layout_marginEnd="1dp"
                    android:background="@drawable/widget_prayer_row_bg">

                    <TextView
                        android:id="@+id/prayer_name_5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Maghrib"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/prayer_time_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5:11"
                        android:textColor="#80FFFFFF"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/prayer_row_6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="6dp"
                    android:paddingEnd="4dp"
                    android:layout_marginStart="1dp"
                    android:background="@drawable/widget_prayer_row_bg">

                    <TextView
                        android:id="@+id/prayer_name_6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Isha"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/prayer_time_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6:41"
                        android:textColor="#80FFFFFF"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
